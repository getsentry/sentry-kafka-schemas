{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Main",
  "definitions": {
    "Main": {
      "type": "object",
      "title": "generic_metric",
      "additionalProperties": true,
      "properties": {
        "version": {
          "const": 2
        },
        "use_case_id": {
          "type": "string"
        },
        "org_id": {
          "type": "integer"
        },
        "project_id": {
          "type": "integer"
        },
        "metric_id": {
          "type": "integer"
        },
        "type": {
          "type": "string"
        },
        "timestamp": {
          "type": "integer",
          "minimum": 0
        },
        "sentry_received_timestamp": {
          "type": "number"
        },
        "tags": {
          "$ref": "#/definitions/StringToString"
        },
        "value": {
          "anyOf": [
            {
              "title": "encoded_series_array_metric_value",
              "type": "object",
              "properties": {
                "format": {
                  "const": "array"
                },
                "data": {
                  "anyOf": [
                    {
                      "type": "array",
                      "items": {
                        "type": "number"
                      }
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "integer"
                      }
                    }
                  ]
                }
              },
              "required": ["format", "data"]
            },
            {
              "title": "encoded_series_base64_metric_value",
              "type": "object",
              "properties": {
                "format": {
                  "const": "base64"
                },
                "data": {
                  "type": "string"
                }
              },
              "required": ["format", "data"]
            },
            {
              "title": "encoded_series_zstd_metric_value",
              "type": "object",
              "properties": {
                "format": {
                  "const": "zstd"
                },
                "data": {
                  "type": "string"
                }
              },
              "required": ["format", "data"]
            },
            {
              "title": "counter_metric_value",
              "type": "number"
            },
            {
              "title": "set_metric_value",
              "type": "array",
              "items": {
                "type": "integer"
              }
            },
            {
              "title": "distribution_metric_value",
              "type": "array",
              "items": {
                "type": "number"
              }
            },
            {
              "title": "gauge_metric_value",
              "type": "object",
              "properties": {
                "min": {
                  "type": "number"
                },
                "max": {
                  "type": "number"
                },
                "sum": {
                  "type": "number"
                },
                "count": {
                  "type": "integer"
                },
                "last": {
                  "type": "number"
                }
              },
              "additionalProperties": false,
              "required": ["min", "max", "sum", "count", "last"]
            }
          ]
        },
        "retention_days": {
          "type": "integer"
        },
        "mapping_meta": {
          "$ref": "#/definitions/MappingMeta"
        },
        "aggregation_option": {
          "type": "string"
        }
      },
      "required": [
        "mapping_meta",
        "metric_id",
        "org_id",
        "project_id",
        "retention_days",
        "tags",
        "timestamp",
        "type",
        "use_case_id",
        "value"
      ]
    },
    "MappingMeta": {
      "type": "object",
      "additionalProperties": true,
      "patternProperties": {
        "^[chdfr]$": {
          "$ref": "#/definitions/IntToString"
        }
      }
    },
    "IntToString": {
      "type": "object",
      "additionalProperties": true,
      "patternProperties": {
        "^[0-9]$": {
          "type": "string"
        }
      }
    },
    "StringToString": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
