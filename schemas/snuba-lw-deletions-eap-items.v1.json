      "type": "string"
    },
    "rows_to_delete": {
      "type": "integer"
    },
    "conditions": {
      "type": "object",
      "properties": {
        "organization_id": {
          "type": "array",
          "items": { "type": "integer" }
        },
        "project_id": {
          "type": "array",
          "items": { "type": "integer" }
        },
        "trace_id": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "tenant_ids": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [{ "type": "string" }, { "type": "integer", "minimum": 1 }]
      }
    }
  },
  "required": ["storage_name", "rows_to_delete", "conditions", "tenant_ids"]
}
